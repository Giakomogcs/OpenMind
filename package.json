{
  "name": "mcp-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "mcp-server",
    "mcp-client"
  ],
  "scripts": {
    "start": "npm start --workspace=mcp-server",
    "dev": "concurrently \"npm run start:dev --workspace=mcp-server\" \"npm start --workspace=mcp-client\"",
    "build": "npm run build --workspaces --if-present",
    "test": "npm test --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
