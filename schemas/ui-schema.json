{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UI Component Dictionary",
  "description": "A schema for defining UI components to be rendered in the MCP Client.",
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "enum": [
        "Card",
        "DataTable",
        "Stat",
        "ErrorMessage",
        "LayoutGrid",
        "Tabs"
      ]
    },
    "props": {
      "type": "object"
    }
  },
  "required": ["component", "props"],
  "if": { "properties": { "component": { "const": "Card" } } },
  "then": {
    "properties": {
      "props": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "content": { "type": "string" }
        },
        "required": ["title", "content"]
      }
    }
  },
  "if": { "properties": { "component": { "const": "DataTable" } } },
  "then": {
    "properties": {
      "props": {
        "type": "object",
        "properties": {
          "columns": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "key": { "type": "string" },
                "header": { "type": "string" }
              },
              "required": ["key", "header"]
            }
          },
          "data": {
            "type": "array",
            "items": { "type": "object" }
          }
        },
        "required": ["columns", "data"]
      }
    }
  },
  "if": { "properties": { "component": { "const": "Stat" } } },
  "then": {
    "properties": {
      "props": {
        "type": "object",
        "properties": {
          "label": { "type": "string" },
          "value": { "type": "string" }
        },
        "required": ["label", "value"]
      }
    }
  },
  "if": { "properties": { "component": { "const": "ErrorMessage" } } },
  "then": {
    "properties": {
      "props": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "details": { "type": "string" }
        },
        "required": ["title", "details"]
      }
    }
  },
  "if": { "properties": { "component": { "const": "LayoutGrid" } } },
  "then": {
    "properties": {
      "props": {
        "type": "object",
        "properties": {
          "columns": { "type": "integer", "minimum": 1 },
          "children": {
            "type": "array",
            "items": { "$ref": "#" }
          }
        },
        "required": ["columns", "children"]
      }
    }
  },
  "if": { "properties": { "component": { "const": "Tabs" } } },
  "then": {
    "properties": {
      "props": {
        "type": "object",
        "properties": {
          "tabs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": {
                  "type": "array",
                  "items": { "$ref": "#" }
                }
              },
              "required": ["title", "content"]
            }
          }
        },
        "required": ["tabs"]
      }
    }
  }
}
